generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum GENDER {
  MALE
  FEMALE
  OTHER
}

enum Institutes {
  Parul_Institue_of_Engineering_and_Technology
  Parul_Institue_of_Technology
  Parul_Institue_of_Design
  Parul_Institute_of_Management
  Parul_Institute_of_Design
  Parul_Institute_of_Applied_Sciences
  Parul_Institute_of_Medical_Science_and_Research
  Parul_Institute_of_Pharmacy_and_Research
  Parul_Institute_of_Ayurveda_and_Research
  Parul_Institute_of_Hotel_Management_and_Catering_Technology
  Parul_Polytechnic_Institute
}

enum Degree {
  BTech
  MTech
  PhD
  BSc
  MSc
  Pharmacy
  MBA
}

enum LevelofEduction {
  Graduate
  PostGraduate
  Doctorate
}

enum TypeUser {
  Admin
  Alumni
  Student
}

model Registration {
  id                                        String    @id @default(auto()) @map("_id") @db.ObjectId
  email                                     String    @unique
  FirstName                                 String?
  LastName                                  String?
  Password                                  String
  primaryEmailId                            String    @unique
  secondaryEmailId                          String?   @unique
  Gender                                    String?
  DateofBirth                               DateTime?
  startingYear                              Int
  YearofPassing                             Int?
  Institution                               String?
  Degree                                    String?
  Specialization                            String
  optedForHigherEducationfromOtherInstitues Boolean   @default(false)
  highestLevelOfEduction                    String?
  UniversityofHigherEducdation              String?
  Company                                   String?
  Title                                     String?
  Industry                                  String?
  WorkExp                                   Int?
  PlaceofWork                               String?
  Skills                                    String[]
  currentAddress                            Address
  typeOfUser                                TypeUser
}

type Address {
  placeOfWork String
  state       String
  city        String
}

model UtilityCollections {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  KeyField String   @unique
  Value    String[]
}
